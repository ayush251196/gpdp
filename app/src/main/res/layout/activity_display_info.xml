<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@drawable/sebaloy_background"
    tools:context="com.example.project.hci_lab.Display_info">




    <com.android.volley.toolbox.NetworkImageView


        android:layout_width="115dp"
        android:layout_height="127dp"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView1"
        />

    <TextView


        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/tv_expire"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:gravity="left"
        android:text="Name : "
        android:textColor="@color/malay_color_pink"
        android:textStyle="bold"

        android:textSize="26sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:layout_below="@+id/imageView2"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Blodd Group"
                android:textColor="@color/malay_color_normal_1"/>


            <TextView
                android:id="@+id/tv_doj"

                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_blood"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textColor="@color/malay_color_normal_1"


                android:text="Date of Joining" />


            <TextView
                android:id="@+id/tv_issue_Date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_doj"
                android:gravity="left"
                android:text="Date of Issue"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"

                android:textColor="@color/malay_color_green"
                tools:layout_editor_absoluteY="144dp" />

            <TextView
                android:id="@+id/tv_expire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_issue_Date"
                android:gravity="left"
                android:text="Date of Expire"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"

                android:textColor="@color/malay_color_red"
                tools:layout_editor_absoluteY="144dp" />





            <TextView
                android:id="@+id/tv_father"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_expire"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Father Name"
                android:textColor="@color/malay_color_normal_1"

                />

            <TextView
                android:id="@+id/tv_mother"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_father"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Mother Name"
                android:textColor="@color/malay_color_normal_1"
                />


            <TextView
                android:id="@+id/tv_address"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_mother"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Address"
                tools:layout_editor_absoluteY="316dp" />


            <TextView
                android:id="@+id/tv_email"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_address"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Email"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/tv_phone"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_email"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Phone"
                tools:ignore="MissingConstraints"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/tv_qualification"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_phone"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"

                android:text="Qualification" />

            <TextView
                android:id="@+id/tv_depertment"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_qualification"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Depertment" />
            <TextView
                android:id="@+id/tv_designation"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_depertment"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Designation" />

            <TextView
                android:id="@+id/tv_aadhaar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_phone"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"

                android:gravity="left"
                android:text="Aadhaar"
                android:textColor="@color/colorPrimary"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_sebaloy_post"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_aadhaar"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Sebaloy Post"
                android:textColor="@color/malay_color_orange"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_sebaloy_post_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_sebaloy_post"
                android:textColor="@color/malay_color_orange"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="Sebaloy Post level"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_volunteers_code"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_aadhaar"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="volunteers Code"
                android:textColor="@color/malay_color_green"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_volunteers_code"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:text="volunteers Code"
                android:textColor="@color/malay_color_green"

                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </ScrollView>





</LinearLayout>

