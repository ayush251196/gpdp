<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    tools:context="com.example.project.hci_lab.circle_menu">

    <TextView
        android:id="@+id/tv_surveyor_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="surveyor_code" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="353dp"
        android:layout_height="150dp">

        <com.android.volley.toolbox.NetworkImageView


            android:id="@+id/imageView1"
            android:layout_width="115dp"
            android:layout_height="127dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_district_menu"
            android:layout_width="185dp"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="16dp"
            android:text="District Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_subdivision_menu"
            android:layout_width="185dp"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="48dp"
            android:text="Sub Division Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/tv_block_menu"
            android:layout_width="185dp"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="80dp"
            android:text="Block Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_gp_vc_name_menu"
            android:layout_width="185dp"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="112dp"
            android:text="GP / VC  Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <TextView


        android:id="@+id/tv_name_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/tv_expire"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:gravity="left"
        android:text="Surveyor Name : "
        android:textColor="@color/malay_color_pink"
        android:textSize="26sp"

        android:textStyle="bold" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:layout_below="@+id/imageView2"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gpdp_background"
            android:orientation="vertical"
            tools:context=".circle_menu">

            <com.hitomi.cmlibrary.CircleMenu
                android:id="@+id/circle_menu_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>