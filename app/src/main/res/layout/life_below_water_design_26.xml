<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_layout_lbw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--****************Section 1 ***************************-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="1. Do you have any Pond / Lake"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />


                <RadioGroup
                    android:id="@+id/rd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>


            </LinearLayout>


            <!--****************Section 2 ***************************-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="2. Whether it has been excavated under any government scheme"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />


                <RadioGroup
                    android:id="@+id/pond_or_lake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>


            </LinearLayout>


            <!--****************Section 3 ***************************-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="3. Whether Pond / Lake hold water round the year"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />


                <RadioGroup
                    android:id="@+id/exvated_or_not"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>

            <!--****************Section 4 ***************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_normal_2"
                    android:gravity="left"
                    android:text="Whether it is used for the following"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:text="a. Fishery" />

                <RadioGroup
                    android:id="@+id/hold_water_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:text="b. Drinking" />

                <RadioGroup
                    android:id="@+id/used_for_following"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:text="c. Domestic Workg" />

                <RadioGroup
                    android:id="@+id/effected_by_flood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:text="d. Irrigation" />

                <RadioGroup
                    android:id="@+id/solid_liquid_wastes_dumped"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="left"
                    android:text="e. Social Programme" />

                <RadioGroup
                    android:id="@+id/required_reexacavation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>


            <!--****************Section 3 ***************************-->


            <!--****************Section 4 ***************************-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="4. Effected by flood"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <RadioGroup
                    android:id="@+id/other_requirements"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>


            <!--****************Section 5 ***************************-->


            <!--****************Section 6 ***************************-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="6. Whether Pond / Lake required re-excavation"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <RadioGroup
                    android:id="@+id/radio_has_ration_card_91"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/malay_color_green"
                    android:gravity="left"
                    android:text="5. Solid/Liquid wastes are dumped"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4E4D4C" />

                <RadioGroup
                    android:id="@+id/radio_has_ration_card_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rb21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>


            <!--****************Section 7 ***************************-->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#4E4D4C" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/malay_color_green"
                android:gravity="left"
                android:text="7. Any other requirements for the improvement of the Pond / Lake"
                android:textColor="#ffffff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#4E4D4C" />


            <Spinner
                android:id="@+id/spinner_ration_card_type_9"
                style="@android:style/Widget.Spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@android:color/transparent"
                android:entries="@array/spinner_item_ration_card_type_8" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#4E4D4C" />


            <ImageButton
                android:id="@+id/save_proceed_4"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/next"
                 />

        </LinearLayout>

    </ScrollView>


</LinearLayout>