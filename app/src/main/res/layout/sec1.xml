<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/sebaloy_background" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/imageView2"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/scrollview1"
        android:fillViewport="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText

                android:id="@+id/editText_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:ems="10"
                android:gravity="left"
                android:hint="Name of Head of family"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="testing" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Age" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_gender"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true"
                    android:id="@+id/radio_male"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radio_female"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transgender"
                    android:id="@+id/radio_transgender"
                    />
            </RadioGroup>

            <EditText
                android:id="@+id/editText_Mother_Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText_father_name"
                android:ems="10"
                android:gravity="left"
                android:hint="Mother Name"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/editText_Address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText_Mother_Name"
                android:ems="10"
                android:gravity="left"
                android:hint="Address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText_pin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|phone"
                android:ems="10"
                android:layout_below="@+id/editText_Address"
                android:hint="PIN"
                android:gravity="left"/>

            <EditText
                android:id="@+id/editText_Phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|phone"
                android:ems="10"

                android:layout_below="@+id/editText_pin"
                android:hint="Contact No"
                android:gravity="left"/>

            <EditText
                android:id="@+id/editText_emergency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|phone"
                android:ems="10"

                android:layout_below="@+id/editText_Phone"
                android:hint="Emergency Contact No"
                android:gravity="left"/>




            <EditText
                android:id="@+id/editText_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Email"
                android:gravity="left"
                android:ems="10"

                android:layout_below="@+id/editText_emergency"
                />


            <EditText
                android:id="@+id/editText_aadhar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|numberDecimal"
                android:ems="10"

                android:layout_below="@+id/editText_email"
                android:hint="Aadhaar No"
                android:gravity="left"/>


            <EditText
                android:id="@+id/editText_remark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|numberDecimal"
                android:ems="10"

                android:layout_below="@+id/editText_aadhar"
                android:hint="Remark"
                android:gravity="left"/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>