<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/sebaloy_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dialog"

            style="@android:style/Widget.Spinner"

            android:drawSelectorOnTop="true" />

        <Spinner
            android:id="@+id/spinner_subdivision"
            android:layout_below="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            style="@android:style/Widget.Spinner"/>


        <Spinner
            android:id="@+id/spinner_mandol"
            android:layout_below="@+id/spinner_subdivision"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dialog"

            style="@android:style/Widget.Spinner"

            android:drawSelectorOnTop="true" />

        <Spinner
            android:id="@+id/spinner_sebaloy_post"
            android:layout_below="@+id/spinner_qualification"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            style="@android:style/Widget.Spinner"/>

        <Spinner
            android:id="@+id/spinner_sebaloy_post_level"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dialog"

            style="@android:style/Widget.Spinner"

            android:drawSelectorOnTop="true" />

        <Spinner
            android:id="@+id/spinner_depertment"
            android:layout_below="@+id/spinner_qualification"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            style="@android:style/Widget.Spinner"/>
        <Spinner
            android:id="@+id/spinner_designation"
            android:layout_below="@+id/spinner_qualification"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            style="@android:style/Widget.Spinner"/>
        <TextView
            android:id="@+id/tv_expire_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text=" Volunteer Code"
            android:textAppearance="?android:attr/textAppearanceMedium" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>